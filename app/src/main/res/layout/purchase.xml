<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<ScrollView
		android:id="@+id/vscroll1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1">
		<LinearLayout
			android:id="@+id/linear1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#FFFFFF"
			android:orientation="vertical">
			<RelativeLayout
				android:id="@+id/RelativeLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_weight="1">
				<LinearLayout
					android:id="@+id/layout1"
					android:layout_width="match_parent"
					android:layout_height="205dp"
					android:orientation="horizontal">
					<com.airbnb.lottie.LottieAnimationView
						android:id="@+id/lottie1"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:padding="8dp"
						android:scaleType="fitCenter"
						android:layout_centerInParent="true"
						app:lottie_fileName="1.json"
						app:lottie_loop="false"
						app:lottie_autoPlay="true" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/layout2"
					android:layout_width="match_parent"
					android:layout_height="20dp"
					android:padding="8dp"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/imageview1"
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:src="@drawable/ic_navigate_before_grey"
						android:scaleType="fitCenter" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/layout3"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="8dp"
					android:paddingTop="8dp"
					android:paddingRight="8dp"
					android:paddingBottom="80dp"
					android:orientation="vertical">
					<LinearLayout
						android:id="@+id/linear6"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="210dp"
						android:gravity="center_vertical"
						android:orientation="horizontal">
						<LinearLayout
							android:id="@+id/linear7"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:orientation="vertical"
							android:layout_weight="1">
							<TextView
								android:id="@+id/textview1"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:padding="8dp"
								android:text="✔Vip from $0.99/month"
								android:textSize="14sp"
								android:textColor="#000000" />
							<TextView
								android:id="@+id/textview2"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:padding="8dp"
								android:text="✔Upto 4x Faster"
								android:textSize="14sp"
								android:textColor="#000000" />
							<TextView
								android:id="@+id/textview3"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:padding="8dp"
								android:text="✔Ad-Free experience"
								android:textSize="14sp"
								android:textColor="#000000" />
							<TextView
								android:id="@+id/textview4"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:padding="8dp"
								android:text="✔100+ Virtual Locations"
								android:textSize="14sp"
								android:textColor="#000000" />
						</LinearLayout>
						<ImageView
							android:id="@+id/imageview2"
							android:layout_width="100dp"
							android:layout_height="100dp"
							android:layout_marginRight="8dp"
							android:src="@drawable/img_premium_goods"
							android:scaleType="fitCenter" />
					</LinearLayout>
					<TextView
						android:id="@+id/textview5"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Location"
						android:textSize="18sp"
						android:textStyle="bold"
						android:textColor="#000000" />
					<LinearLayout
						android:id="@+id/linear8"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:gravity="center_vertical"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/imageview3"
							android:layout_width="40dp"
							android:layout_height="40dp"
							android:padding="4dp"
							android:src="@drawable/ic_premium_all_country"
							android:scaleType="fitCenter" />
						<TextView
							android:id="@+id/textview6"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:gravity="center_horizontal|center_vertical"
							android:text="All Location"
							android:textSize="16sp"
							android:textStyle="bold"
							android:textColor="#000000"
							android:layout_weight="1" />
					</LinearLayout>
					<TextView
						android:id="@+id/textview7"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Type"
						android:textSize="18sp"
						android:textStyle="bold"
						android:textColor="#000000" />
					<HorizontalScrollView
						android:id="@+id/hscroll1"
						android:layout_width="match_parent"
						android:layout_height="wrap_content">
						<LinearLayout
							android:id="@+id/linear9"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:padding="3dp"
							android:orientation="horizontal">
							<LinearLayout
								android:id="@+id/linear10"
								android:layout_width="150dp"
								android:layout_height="150dp"
								android:layout_margin="5dp"
								android:paddingLeft="25dp"
								android:paddingTop="15dp"
								android:paddingRight="25dp"
								android:paddingBottom="15dp"
								android:background="#304FFE"
								android:gravity="center_horizontal|center_vertical"
								android:orientation="vertical">
								<TextView
									android:id="@+id/textview8"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:padding="8dp"
									android:gravity="center_horizontal|center_vertical"
									android:text="Monthly Plan"
									android:textSize="16sp"
									android:textColor="#FFFFFF" />
								<LinearLayout
									android:id="@+id/linear11"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:orientation="horizontal"
									android:layout_weight="1" />
								<TextView
									android:id="@+id/textview9"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:padding="8dp"
									android:text="$5.99"
									android:textSize="20sp"
									android:textStyle="bold"
									android:textColor="#FFFFFF" />
							</LinearLayout>
							<LinearLayout
								android:id="@+id/linear16"
								android:layout_width="wrap_content"
								android:layout_height="match_parent"
								android:padding="8dp"
								android:orientation="horizontal"
								android:layout_weight="1" />
							<LinearLayout
								android:id="@+id/linear12"
								android:layout_width="150dp"
								android:layout_height="150dp"
								android:layout_marginLeft="5dp"
								android:layout_marginTop="5dp"
								android:layout_marginRight="10dp"
								android:layout_marginBottom="5dp"
								android:paddingLeft="25dp"
								android:paddingTop="15dp"
								android:paddingRight="25dp"
								android:paddingBottom="15dp"
								android:background="#304FFE"
								android:gravity="center_horizontal|center_vertical"
								android:orientation="vertical">
								<TextView
									android:id="@+id/textview10"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:padding="8dp"
									android:gravity="center_horizontal|center_vertical"
									android:text="Annually Plan"
									android:textSize="16sp"
									android:textColor="#FFFFFF" />
								<LinearLayout
									android:id="@+id/linear13"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:orientation="horizontal"
									android:layout_weight="1" />
								<TextView
									android:id="@+id/textview11"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:padding="8dp"
									android:text="$69.99"
									android:textSize="20sp"
									android:textStyle="bold"
									android:textColor="#FFFFFF" />
							</LinearLayout>
						</LinearLayout>
					</HorizontalScrollView>
				</LinearLayout>
			</RelativeLayout>
		</LinearLayout>
	</ScrollView>
	<LinearLayout
		android:id="@+id/bottom"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:background="#FFFFFF"
		android:orientation="horizontal">
		<com.google.android.material.button.MaterialButton
			android:id="@+id/materialbutton1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="5dp"
			android:padding="8dp"
			android:gravity="center_horizontal|center_vertical"
			android:text="Continue"
			android:textSize="16sp"
			android:textStyle="bold"
			android:textColor="#FFFFFF"
			android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
			app:backgroundTint="@color/colorPrimary"
			app:cornerRadius="28dp"
			style="@style/Widget.MaterialComponents.Button" />
	</LinearLayout>
</LinearLayout>
